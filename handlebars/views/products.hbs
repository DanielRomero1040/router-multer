<div>
  <ul class="nav justify-content-center">
    <li class="nav-item">
      <a class="nav-link"  href="http://localhost:8080/">Ingresar Productos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="http://localhost:8080/api/productos">Ver lista de productos</a>
    </li>
  </ul>

  <h1 class="text-light p-5">Productos</h1>


  <table class="table table-dark table-hover w-50 mx-5">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto</th>
      </tr>
    </thead>
    <tbody>
      {{#each arr}}
        <tr>
          <th scope="row" class="align-middle fs-4">{{this.id}}</th>
          <td class="text-center align-middle fs-4">{{this.title}}</td>
          <td class="text-center align-middle fs-4">{{this.price}}</td>
          <td class="text-center align-middle fs-4"><img src={{this.thumbnail}} alt="" style="width: 100px;" ></td>
        </tr>
      {{/each}}
    </tbody>
  </table>


</div>
